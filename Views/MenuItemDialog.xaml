<Window x:Class="JamrahPOS.Views.MenuItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إدارة الصنف" 
        Height="400" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Background="#F5F5F5"
        FontFamily="Arial">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="إضافة صنف جديد" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Name Field -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="اسم الصنف *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" 
                     FontSize="16" 
                     Padding="10"
                     MaxLength="100"/>
        </StackPanel>

        <!-- Price Field -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="السعر (ريال) *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" 
                     FontSize="16" 
                     Padding="10"
                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
        </StackPanel>

        <!-- Category Field -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="التصنيف *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox" 
                      DisplayMemberPath="Name"
                      FontSize="16" 
                      Padding="10">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </StackPanel>

        <!-- Active Status -->
        <CheckBox Grid.Row="4"
                  x:Name="IsActiveCheckBox"
                  Content="صنف نشط"
                  FontSize="14"
                  FontWeight="SemiBold"
                  IsChecked="True"
                  Margin="0,0,0,15"/>

        <!-- Validation Message -->
        <TextBlock Grid.Row="5"
                   x:Name="ErrorText"
                   Text=""
                   FontSize="12"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"
                   Margin="0,0,0,10"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="إلغاء"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="0,12"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Cancel_Click"/>

            <Button Grid.Column="2"
                    Content="حفظ"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="0,12"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Save_Click"/>
        </Grid>
    </Grid>
</Window>
