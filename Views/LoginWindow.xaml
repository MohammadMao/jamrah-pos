<Window x:Class="JamrahPOS.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:JamrahPOS.ViewModels"
        mc:Ignorable="d"
        Title="تسجيل الدخول - Jamrah POS" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.DataContext>
        <viewmodels:LoginViewModel />
    </Window.DataContext>

    <Border BorderBrush="#2196F3" BorderThickness="2" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2196F3" CornerRadius="8,8,0,0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="نظام نقاط البيع" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="Jamrah Restaurant POS" 
                               FontSize="14" 
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" Margin="40,30,40,20">
                <TextBlock Text="تسجيل الدخول" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Username -->
                <TextBlock Text="اسم المستخدم" 
                           FontSize="14" 
                           Margin="0,0,0,5"
                           FlowDirection="RightToLeft"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Padding="10,8"
                         Margin="0,0,0,15"
                         FlowDirection="LeftToRight"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"/>

                <!-- Password -->
                <TextBlock Text="كلمة المرور" 
                           FontSize="14" 
                           Margin="0,0,0,5"
                           FlowDirection="RightToLeft"/>
                <PasswordBox x:Name="PasswordBox"
                             FontSize="14"
                             Padding="10,8"
                             Margin="0,0,0,15"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           FontSize="12"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           FlowDirection="RightToLeft"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Loading Indicator -->
                <TextBlock Text="جاري تسجيل الدخول..."
                           FontSize="14"
                           Foreground="#2196F3"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           FlowDirection="RightToLeft"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="40,0,40,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="دخول"
                        Grid.Column="0"
                        Command="{Binding LoginCommand}"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="0,10"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="خروج"
                        Grid.Column="2"
                        Command="{Binding ExitCommand}"
                        FontSize="16"
                        Padding="0,10"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D32F2F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
