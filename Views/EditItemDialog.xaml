<Window x:Class="JamrahPOS.Views.EditItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تعديل الصنف" 
        Height="480" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="White" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="تعديل الصنف" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" FlowDirection="RightToLeft"/>

            <!-- Item Name -->
            <TextBlock Grid.Row="1" x:Name="ItemNameText" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#2196F3" Margin="0,0,0,15" FlowDirection="RightToLeft"/>

            <!-- Original Price Display -->
            <TextBlock Grid.Row="2" x:Name="OriginalPriceText" FontSize="14" HorizontalAlignment="Center" Foreground="#666666" Margin="0,0,0,15" FlowDirection="RightToLeft"/>

            <!-- Quantity Section -->
            <Border Grid.Row="3" Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="الكمية" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10" FlowDirection="RightToLeft" HorizontalAlignment="Right"/>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="-" Width="45" Height="45" FontSize="20" FontWeight="Bold" Click="DecreaseQuantity_Click" Background="#F44336" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="5"/>
                        <TextBox x:Name="QuantityTextBox" Width="90" Height="45" FontSize="24" FontWeight="Bold" TextAlignment="Center" VerticalContentAlignment="Center" Margin="10,5" Text="1" PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                        <Button Content="+" Width="45" Height="45" FontSize="20" FontWeight="Bold" Click="IncreaseQuantity_Click" Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Price Section -->
            <Border Grid.Row="4" Background="#FFF3E0" Padding="15" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="سعر الوحدة (للخصم)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10" FlowDirection="RightToLeft" HorizontalAlignment="Right"/>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBox x:Name="PriceTextBox" Width="150" Height="45" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalContentAlignment="Center" PreviewTextInput="DecimalTextBox_PreviewTextInput" TextChanged="PriceTextBox_TextChanged"/>
                        <TextBlock Text="SDG" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" x:Name="DiscountText" FontSize="12" Foreground="#F57C00" HorizontalAlignment="Center" FontWeight="SemiBold" FlowDirection="RightToLeft"/>
                </Grid>
            </Border>

            <!-- Buttons -->
            <Grid Grid.Row="5" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="حفظ" Grid.Column="0" Height="45" FontSize="16" FontWeight="Bold" Click="Save_Click" Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                <Button Content="إلغاء" Grid.Column="2" Height="45" FontSize="16" FontWeight="Bold" Click="Cancel_Click" Background="#757575" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            </Grid>
        </Grid>
    </Border>
</Window>
