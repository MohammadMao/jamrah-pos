<Window x:Class="JamrahPOS.Views.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إدارة المستخدم" 
        Height="450" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Background="#F5F5F5"
        FontFamily="Arial">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="إضافة مستخدم جديد" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Username Field -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="اسم المستخدم *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     FontSize="16" 
                     Padding="10"
                     MaxLength="100"/>
        </StackPanel>

        <!-- Password Field -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5">
                <Run x:Name="PasswordLabelText" Text="كلمة المرور *"/>
            </TextBlock>
            <PasswordBox x:Name="PasswordBox" 
                         FontSize="16" 
                         Padding="10"
                         PasswordChanged="PasswordBox_PasswordChanged"/>
            <TextBlock x:Name="PasswordHintText" 
                       Text="اترك فارغاً للإبقاء على كلمة المرور الحالية" 
                       FontSize="11" 
                       Foreground="#666666" 
                       Margin="0,5,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Role Field -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="الدور الوظيفي *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleComboBox" 
                      FontSize="16" 
                      Padding="10">
                <ComboBoxItem Content="مدير" Tag="Admin"/>
                <ComboBoxItem Content="كاشير" Tag="Cashier" IsSelected="True"/>
            </ComboBox>
        </StackPanel>

        <!-- Active Status -->
        <CheckBox Grid.Row="4"
                  x:Name="IsActiveCheckBox"
                  Content="مستخدم نشط"
                  FontSize="14"
                  FontWeight="SemiBold"
                  IsChecked="True"
                  Margin="0,0,0,15"/>

        <!-- Validation Message -->
        <TextBlock Grid.Row="5"
                   x:Name="ErrorText"
                   Text=""
                   FontSize="12"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"
                   Margin="0,0,0,10"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="إلغاء"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="0,12"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Cancel_Click"/>

            <Button Grid.Column="2"
                    Content="حفظ"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="0,12"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Save_Click"/>
        </Grid>
    </Grid>
</Window>
