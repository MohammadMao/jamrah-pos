<Window x:Class="JamrahPOS.Views.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إدارة التصنيف" 
        Height="280" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize"
        FlowDirection="RightToLeft"
        Background="#F5F5F5"
        FontFamily="Arial">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="إضافة تصنيف جديد" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Name Field -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="اسم التصنيف *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" 
                     FontSize="16" 
                     Padding="10"
                     MaxLength="100"/>
        </StackPanel>

        <!-- Active Status -->
        <CheckBox Grid.Row="2"
                  x:Name="IsActiveCheckBox"
                  Content="تصنيف نشط"
                  FontSize="14"
                  FontWeight="SemiBold"
                  IsChecked="True"
                  Margin="0,0,0,20"/>

        <!-- Validation Message -->
        <TextBlock Grid.Row="3"
                   x:Name="ErrorText"
                   Text=""
                   FontSize="12"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"
                   Margin="0,0,0,10"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="إلغاء"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="0,12"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Cancel_Click"/>

            <Button Grid.Column="2"
                    Content="حفظ"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="0,12"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Save_Click"/>
        </Grid>
    </Grid>
</Window>
